@model List<Skill>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Yetenek Tablosu</h3>
</div>
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Yetenek İsmi</th>
                <th scope="col" class="sort" data-sort="completion">Completion</th>
                <th scope="col" class="sort" data-sort="status">Sil</th>
                <th scope="col">Güncelle</th>


            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        <div class="media align-items-center">
                            <div class="media-body">
                                <span class="name mb-0 text-sm">@item.Id</span>
                            </div>
                        </div>
                    </th>
                    <td class="budget">
                        @item.Title
                    </td>
                    <td>
                        <div class="d-flex align-items-center">
                            <span class="completion mr-2">@item.Value</span>
                            <div>
                                <div class="progress">
                                    <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@item.Value" aria-valuemin="0" aria-valuemax="100" style="width: @item.Value%;"></div>
                                </div>
                            </div>
                        </div>
                    </td>
                    <td>
                        
                            <a class="btn btn-danger" href="~/Skill/DeleteSkill">Sil</a>
                       
                    </td>
                    <td>
                        
                            <a class="btn btn-warning" href="~/Skill/UpdateSkill">Güncelle</a>
                        

                    </td>


                </tr>
            }
        </tbody>
    </table>
</div>